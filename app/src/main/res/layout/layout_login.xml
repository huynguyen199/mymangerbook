<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/logo_fpt"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/logobook"
            />
        <TextView
            android:id="@+id/textvdangnhap"
            android:textSize="40dp"
            android:layout_below="@+id/logo_fpt"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textStyle="bold"
            android:fontFamily="@font/lobster"
            android:textColor="@color/colorBlack"

            />
        <EditText
            android:id="@+id/edituser"
            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textvdangnhap"
            android:inputType="textPersonName"
            android:hint="Tài khoản"
            />
    <EditText
        android:id="@+id/editpass"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_below="@+id/edituser"
        android:inputType="textPassword"
        android:hint="Mật khẩu"
        />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editpass"
        android:layout_centerHorizontal="true"
        android:text="Nhớ mật khẩu" />
    <RelativeLayout
        android:id="@+id/relative_login"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_round"
        android:layout_below="@+id/check_box">

        <ProgressBar
            android:id="@+id/btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:targetApi="lollipop"
            android:layout_marginLeft="60dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/text_login"
            android:text="Đăng nhập"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btnlogin"
            android:fontFamily="@font/lobster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

</RelativeLayout>