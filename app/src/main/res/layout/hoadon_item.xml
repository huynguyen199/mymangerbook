<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_round"
    android:layout_marginTop="3dp"
    >
    <ImageView
        android:layout_width="70dp"
        android:layout_margin="10dp"
        android:layout_height="70dp"
        android:src="@drawable/hdicon"
        android:id="@+id/image_hoadon"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/mahoadon"
        android:layout_toRightOf="@+id/image_hoadon"
        android:layout_margin="10dp"
        android:text="ma hoa don"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/date_hoadon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_hoadon"
        android:layout_below="@+id/mahoadon"
        android:layout_margin="10dp"
        android:text="2131231"
        />
    <Button
        android:id="@+id/hoadon_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@drawable/ic_baseline_delete_forever_24"
        />

</RelativeLayout>