<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >
        <ImageView
            android:id="@+id/logo_fpt"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo"
            />
        <TextView
            android:id="@+id/textvdangnhap"
            android:textSize="40dp"
            android:layout_below="@+id/logo_fpt"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"

            />
        <EditText
            android:id="@+id/editpassold"
            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textvdangnhap"
            android:inputType="textPassword"
            android:hint="Mật khẩu cũ"
            />
    <EditText
        android:id="@+id/editpass"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_below="@+id/editpassold"
        android:inputType="textPersonName"
        android:hint="Mật khẩu mới"
        />
    <EditText
        android:id="@+id/editcofirmpass"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_below="@+id/editpass"
        android:inputType="textPersonName"
        android:hint="Xác nhận mật khẩu"
        />
    <Button
        android:id="@+id/btnlogin"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editcofirmpass"
        android:layout_centerHorizontal="true"
        android:text="Đổi mật khẩu"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/button_round"
        />
</RelativeLayout>